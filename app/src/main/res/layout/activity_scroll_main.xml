<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible">

    <Button
        android:id="@+id/btn_lv_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ScrollView嵌套1个ListView和两个TextView,有滑动冲突" />

    <Button
        android:id="@+id/btn_just_recycle_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ScrollView嵌套1个RecycleView" />


    <Button
        android:id="@+id/btn_recycle_in_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ScrollView嵌套1个RecycleView和两个TextView" />

    <Button
        android:id="@+id/btn_list_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自定义View解决ScrollView嵌套问题" />

    <Button
        android:id="@+id/btn_recycle_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recycle解决ScrollView嵌套问题" />

    <Button
        android:id="@+id/btn_nested_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NestedScrollView" />
</LinearLayout>