<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Application theme. -->
    <style name="FrontActivityTheme" parent="android:Theme.Light">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:typeface">sans</item>
    </style>

    <!-- weiqiang 全部ListView的风格
<item name="android:listSelector">@drawable/mm_chat_listitem</item>点击无背景色变化
-->
    <style name="ListStyleMain">
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:divider">@color/colorGray</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:scrollbars">none</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:listSelector">@drawable/bg_list_selector</item>
    </style>

    <!-- weiqiang CenterHintText-->
    <style name="CenterHintText">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_center_hint</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:visibility">invisible</item>

    </style>

    <!-- weiqiang 用来表示以通讯录用户名上的首个字母-->
    <!-- 蓝底白字再使用吧<item name="android:textStyle">bold</item>-->
    <style name="SectionText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>a
        <item name="android:background">@color/colorGray</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- weiqiang 用来表示以通讯录为主的TextView-->
    <!-- weiqiang 表示历史聊天中的内容-->
    <!-- <item name="android:text">GaoWeijie;XuYan;XuZhengchun;GaoWeijie;XuYan;XuZhengchun;</item> -->
    <style name="NameText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- weiqiang 全部ListView的风格-->
    <style name="MySiderBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">45dp</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">2dp</item>
    </style>

</resources>
